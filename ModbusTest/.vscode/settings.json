{
    "editor.minimap.enabled": false,
    // "workbench.statusBar.visible": false,
    "workbench.activityBar.visible": false,
    "editor.folding": true,
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "editor.formatOnType": true,
    "editor.formatOnSave": false,
    "editor.formatOnPaste": true,
    "editor.tokenColorCustomizations": {
        "[Default Dark+]": {
            "textMateRules": [
                {
                    "scope": [
                        "entity.name.function.preprocessor",
                        "meta.preprocessor",
                        "meta.block",
                    ],
                    "settings": {
                        "foreground": "#adc586"
                    }
                },
                {
                    "scope": [
                        "punctuation.section.arguments.begin.bracket.round",
                        "punctuation.section.arguments.end.bracket.round",
                        "punctuation.section.block.begin.bracket.curly",
                        "punctuation.section.block.end.bracket.curly",
                        "punctuation.section.parens.begin.bracket.round",
                        "punctuation.section.parens.end.bracket.round",
                        "punctuation.definition.begin.bracket.square",
                        "punctuation.definition.end.bracket.square",
                        "punctuation.terminator.statement",
                        "punctuation.separator.delimiter"
                    ],
                    "settings": {
                        "foreground": "#d4d4d4"
                    }
                }
            ]
        },
    },
    "workbench.sideBar.location": "left",
    "extensions.ignoreRecommendations": true,
    "cortex-debug.enableTelemetry": false,
    "cortex-debug.openocdPath": "D:/toolchain/OpenOCD-20190828-0.10.0/bin/openocd.exe",
    "terminal.integrated.env.windows": {
        "TERM": "xterm"
    },
    "editor.rulers": [
        80
    ],
    "files.associations": {
        "*.h": "c",
        "*.c": "c"
    },
    // "C_Cpp.loggingLevel": "Debug",
    "C_Cpp.clang_format_path": "C:\\toolchain\\clang-format.exe",
}